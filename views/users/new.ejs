<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">New Application</h1>
        <div class="col-6 offset-3">
            <form action="/users" method="POST">

                <!-- Basic Info -->
                <div class="section">
                    <label class="form-label" for="name">Name:</label>
                    <input class="form-control" type="text" id="name" name="user[name]" required> <br>

                    <label class="form-label" for="email">Email:</label>
                    <input class="form-control" type="email" id="email" name="user[email]" required> <br>

                    <label class="form-label" for="education">Education:</label>
                    <input class="form-control" type="text" id="education" name="user[education]"> <br>

                    <label class="form-label">Skills (comma separated):</label>
                    <input class="form-control" type="text" name="user[skills]"
                        value="<%= typeof user !== 'undefined' && user.skills ? user.skills.join(', ') : '' %>">
                </div> <br>

                <!-- Projects -->
                <div class="section projects-container">
                    <h3>Projects</h3>

                    <label class="form-label" for="projectTitle0">Project Title:</label>
                    <input class="form-control" type="text" name="user[projects][0][title]" id="projectTitle0">

                    <label class="form-label" for="projectDescription0">Description:</label>
                    <textarea class="form-control" name="user[projects][0][description]"
                        id="projectDescription0"></textarea>

                    <label class="form-label" for="projectLink0">Links:</label>
                    <input class="form-control" type="url" name="user[projects][0][link]" id="projectLink0">

                    <!-- <button type="button" id="add-project" class="btn btn-secondary mt-2">Add Another Project</button> -->
                </div> <br>

                <!-- Work -->
                <div class="section">
                    <h3>Work Experience</h3>
                    <label class="form-label">Company:</label>
                    <input class="form-control" type="text" name="user[works][0][company]">

                    <label class="form-label">Role:</label>
                    <input class="form-control" type="text" name="user[works][0][role]"> <br>

                    <label class="form-label">Start Date:</label>
                    <input class="form-control" type="date" name="user[works][0][startDate]">

                    <label class="form-label">End Date:</label>
                    <input class="form-control" type="date" name="user[works][0][endDate]"> <br>

                    <label class="form-label">Description:</label>
                    <textarea class="form-control" name="user[works][0][description]"></textarea>
                </div> <br>

                <!-- Links -->
                <div class="section">
                    <h3>Links</h3>
                    <label class="form-label">GitHub:</label>
                    <input class="form-control" type="url" name="user[links][github]"> <br>

                    <label class="form-label">LinkedIn:</label>
                    <input class="form-control" type="url" name="user[links][linkedin]"> <br>

                    <label class="form-label">Portfolio:</label>
                    <input class="form-control" type="url" name="user[links][portfolio]"> <br>
                </div>

                <div class="mb-3">
                    <button class="btn btn-success" type="submit">Submit</button>
                </div>
            </form>
        </div>
    </div>